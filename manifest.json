{
  "manifest_version": 2,
  "name": "Blanko",
  "version": "1.0.0",
  "description": "Ensures proper background colors on web pages with transparent backgrounds",
  "author": "Phrechu",
  "homepage_url": "https://github.com/phrechu/blanko",
  "browser_specific_settings": {
    "gecko": {
      "id": "blanko@phrechu.addon",
      "strict_min_version": "57.0",
      "strict_max_version": "*"
    }
  },

  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "<all_urls>"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
