{
  "manifest_version": 2,
  "name": "Blanko",
  "version": "1.0.0",
  "description": "Ensures proper background colors on web pages",
  "author": "Phrechu",

  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "<all_urls>", "storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
